{
  "expo": {
    "name": "safe-scan",
    "slug": "safe-scan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Icon-Light.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.justicegaines03.safe-scan"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Icon-Light.png",
        "backgroundColor": "#2E7D32",
        "monochromeImage": "./assets/images/Icon-Dark.png"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Icon-Light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2E7D32",
          "dark": {
            "image": "./assets/images/Icon-Dark.png",
            "backgroundColor": "#1B5E20"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
