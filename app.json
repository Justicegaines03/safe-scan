{
  "expo": {
    "name": "SafeScan",
    "slug": "safe-scan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Icon-Light.png",
    "scheme": "safescan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "SafeScan is a powerful QR code security scanner that uses VirusTotal API and community intelligence to protect you from malicious links and unsafe content.",
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "googleServicesFile": "./GoogleService-Info.plist",
      "bundleIdentifier": "com.justicegaines03.safe-scan",
      "supportsTablet": true,
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "SafeScan needs camera access to scan QR codes for security analysis.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "safescan",
            "CFBundleURLSchemes": [
              "safescan"
            ]
          }
        ],
        "NSUserActivityTypes": [
          "com.justicegaines03.safe-scan.scan-qr-code",
          "com.justicegaines03.safe-scan.quick-scan"
        ],
        "NSSupportsLiveActivities": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Icon-Light.png",
        "backgroundColor": "#2E7D32",
        "monochromeImage": "./assets/images/Icon-Dark.png"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.mycorp.myapp",
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "data": [
            {
              "scheme": "safescan"
            }
          ],
          "category": [
            "android.intent.category.BROWSABLE",
            "android.intent.category.DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Icon-Light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#007031",
          "dark": {
            "image": "./assets/images/Icon-Dark.png",
            "backgroundColor": "#174534"
          }
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/crashlytics",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a39c5c3e-29fc-452a-98c2-069ce9b5f8df"
      }
    }
  }
}
